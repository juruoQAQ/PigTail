<view class="container"> 
  
  <view > 
    <image class="loginImg" src="/images/logo.png" mode="widthFix"></image> 
  </view> 
  
  
  <view class="loginFrom"> 
    <!--账号--> 
    <view class="inputView"> 
      <label class="loginLab">账号</label> 
      <input class="inputText"  model:value="{{student_id}}" placeholder="请输入账号" placeholder-style="color:#cccccc"  /> 
    </view> 
 
    <!--密码--> 
    <view class="inputView"> 
      <label class="loginLab">密码</label> 
      <input class="inputText" model:value="{{password}}" password="true" placeholder="请输入密码" placeholder-style="color:#cccccc"  /> 
    </view> 
 
    <!--按钮--> 
    <view class="loginBtnView"> 
      <button class="loginBtn"  bindtap="login">登录</button> 
    </view> 

